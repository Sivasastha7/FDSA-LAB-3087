EXP 5A
from scipy.stats import norm
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Generate data
data = np.arange(1, 10, 0.01)

# Calculate PDF
pdf = norm.pdf(data, loc=5.3, scale=1)

# Set style
sns.set_style('whitegrid')

# Plot
sns.lineplot(x=data, y=pdf, color='black')

plt.xlabel('Heights')
plt.ylabel('Probability Density')
plt.title('Normal Distribution (μ = 5.3, σ = 1)')
plt.show()

EXP 5B
import sklearn  # (not required here, but kept if you need it later)
import numpy as np
import matplotlib.pyplot as plt
import pandas as pd

# Create data
y = pd.Series([1, 2, 3, 4, 3, 5, 4])
x = pd.Series([1, 2, 3, 4, 5, 6, 7])

# Calculate correlation
correlation = y.corr(x)
print("Correlation:", correlation)

# Scatter plot
plt.scatter(x, y)

# Fit and plot best fit line (linear regression)
m, b = np.polyfit(x, y, 1)  # slope and intercept
plt.plot(np.unique(x), m*np.unique(x) + b, color='red')

plt.xlabel("X values")
plt.ylabel("Y values")
plt.title("Scatter Plot with Best Fit Line")
plt.show()

EXP 5B i)
import numpy as np
import matplotlib.pyplot as plt

# Generate data
x = np.arange(50)
y = x + np.random.randint(0, 30, 50)

# Set figure size and DPI BEFORE plotting
plt.rcParams.update({'figure.figsize': (10, 8), 'figure.dpi': 100})

# Scatter plot
plt.scatter(x, y)

plt.title('Simple Scatter Plot')
plt.xlabel('X - value')
plt.ylabel('Y - value')

plt.show()

EXP 5B ii)
import numpy as np
import matplotlib.pyplot as plt

# Generate data
x = np.arange(50)
y = x + np.random.randint(0, 30, 50)

# Set figure size and DPI
plt.rcParams.update({'figure.figsize': (10, 8), 'figure.dpi': 100})

# Scatter plot with color mapping
scatter = plt.scatter(x, y, c=y, cmap='Spectral')

# Add color bar
plt.colorbar(scatter)

# Labels and title
plt.title('Simple Scatter Plot')
plt.xlabel('X - value')
plt.ylabel('Y - value')

plt.show()

EXP 5C i)
import numpy as np

x = np.arange(10, 20)
y = np.array([2, 1, 4, 5, 8, 12, 18, 25, 96, 48])

r = np.corrcoef(x, y)

print(r)

EXP 5C ii)
from numpy.random import randn
from numpy.random import seed
from scipy.stats import pearsonr

# Set seed for reproducibility
seed(1)

# Generate data
data1 = 20 * randn(1000) + 100
data2 = data1 + (10 * randn(1000) + 50)

# Calculate Pearson correlation
corr, _ = pearsonr(data1, data2)

print('Pearsons correlation:', corr)

